<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body class="admin-dashboard">
    <%- include("partials/navbar") %>
    <main class="admin-main">
      <% 
        const totalUsers = users ? users.length : 0;
        const totalCourses = courses ? courses.length : 0;
        const totalTransactions = transactions ? transactions.length : 0;
        const totalRevenue = transactions
          ? transactions.reduce((sum, tx) => sum + Number(tx.amount || 0), 0)
          : 0;
        const pendingTransactions = transactions
          ? transactions.filter((tx) => String(tx.status).toLowerCase() === "pending").length
          : 0;
      %>
      <section class="hero-intro mb-4">
        <div>
          <p class="eyebrow text-uppercase text-muted mb-1">Operator tools</p>
          <h1 class="display-6 fw-bold mb-1">Admin Dashboard</h1>
          <p class="lead text-muted mb-0">
            Track users, curate courses, and follow every transaction in one place.
          </p>
        </div>
        <div class="hero-cta">
          <a class="text-link me-3" href="/">Back to catalog</a>
          <form method="POST" action="/logout" class="d-inline">
            <button class="btn btn-outline-secondary btn-sm" type="submit">
              Sign out
            </button>
          </form>
        </div>
      </section>

      <% if (status && status.course_created) { %>
        <div class="alert alert-success">Course created.</div>
      <% } %>
      <% if (status && status.course_updated) { %>
        <div class="alert alert-success">Course updated.</div>
      <% } %>
      <% if (status && status.course_deleted) { %>
        <div class="alert alert-success">Course deleted.</div>
      <% } %>
      <% if (status && status.course_error) { %>
        <div class="alert alert-danger">
          Course name and price are required.
        </div>
      <% } %>

      <section class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-3 mb-4">
        <article class="stat-card col">
          <p class="stat-label">Registered users</p>
          <p class="stat-value"><%= totalUsers %></p>
          <p class="stat-note">Active accounts</p>
        </article>
        <article class="stat-card col">
          <p class="stat-label">Courses available</p>
          <p class="stat-value"><%= totalCourses %></p>
          <p class="stat-note">Curated catalogue</p>
        </article>
        <article class="stat-card col">
          <p class="stat-label">Total revenue</p>
          <p class="stat-value">$<%= totalRevenue.toFixed(2) %></p>
          <p class="stat-note"><%= totalTransactions %> recorded payments</p>
        </article>
        <article class="stat-card col">
          <p class="stat-label">Pending actions</p>
          <p class="stat-value"><%= pendingTransactions %></p>
          <p class="stat-note">Awaiting review</p>
        </article>
      </section>

      <div class="row g-4">
        <section class="col-12 col-xl-6">
          <div class="dashboard-panel card shadow-sm">
            <div class="panel-header d-flex justify-content-between align-items-center mb-3">
              <h2 class="h5 mb-0">Registered Users</h2>
              <span class="text-muted small">
                <%= totalUsers %> profiles
              </span>
            </div>
            <div class="table-responsive">
              <table class="table table-borderless align-middle mb-0 admin-table">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (!users || users.length === 0) { %>
                    <tr>
                      <td colspan="4" class="text-muted small text-center">
                        No users found.
                      </td>
                    </tr>
                  <% } else { %>
                    <% users.forEach(function (user) { %>
                      <tr>
                        <td><%= user.id %></td>
                        <td><%= user.name %></td>
                        <td class="text-break"><%= user.email %></td>
                        <td>
                          <span
                            class="status-badge <%= user.role === 'admin' ? 'status-badge-primary' : 'status-badge-neutral' %>"
                          >
                            <%= user.role %>
                          </span>
                        </td>
                      </tr>
                    <% }); %>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </section>

        <section class="col-12 col-xl-6">
          <div class="dashboard-panel card shadow-sm">
            <div class="panel-header mb-3">
              <h2 class="h5 mb-0">Add a Course</h2>
              <p class="text-muted small mb-0">
                New listings show up instantly in the catalog.
              </p>
            </div>
            <form method="POST" action="/admin/courses" class="row g-3">
              <div class="col-12">
                <label class="form-label" for="course_name">Course Name</label>
                <input
                  class="form-control"
                  id="course_name"
                  name="course_name"
                  required
                />
              </div>
              <div class="col-12 col-md-6">
                <label class="form-label" for="category">Category</label>
                <input class="form-control" id="category" name="category" />
              </div>
              <div class="col-12 col-md-6">
                <label class="form-label" for="price">Price</label>
                <input
                  class="form-control"
                  id="price"
                  name="price"
                  type="number"
                  step="0.01"
                  min="0"
                  required
                />
              </div>
              <div class="col-12">
                <label class="form-label" for="description">Description</label>
                <textarea
                  class="form-control"
                  id="description"
                  name="description"
                  rows="2"
                ></textarea>
              </div>
              <div class="col-12">
                <label class="form-label" for="instructor_id">Instructor ID</label>
                <input
                  class="form-control"
                  id="instructor_id"
                  name="instructor_id"
                  type="number"
                  min="1"
                />
              </div>
              <div class="col-12">
                <button class="btn btn-gradient w-100" type="submit">
                  Create Course
                </button>
              </div>
            </form>
          </div>
        </section>
      </div>

      <section class="dashboard-panel card shadow-sm mt-3">
        <div class="panel-header d-flex justify-content-between align-items-center mb-3">
          <h2 class="h5 mb-0">Manage Courses</h2>
          <span class="text-muted small">
            <%= totalCourses %> active listings
          </span>
        </div>
        <% if (!courses || courses.length === 0) { %>
          <div class="empty-state text-center">
            No courses to manage yet.
          </div>
        <% } else { %>
          <div class="course-grid">
            <% courses.forEach(function (course) { %>
              <article class="course-card admin-course-card">
              <div class="course-card-header d-flex justify-content-between align-items-center">
                <div>
                  <span class="text-muted small">ID #<%= course.id %></span>
                  <h3 class="h6 mb-0"><%= course.course_name %></h3>
                </div>
                <span class="badge bg-light text-dark text-uppercase small">
                  Editable
                </span>
              </div>
              <p class="text-muted small mt-2 mb-3">
                Category: <%= course.category || "General" %> Â· Price: $<%= Number(course.price).toFixed(2) %>
              </p>
              <form
                method="POST"
                action="/admin/courses/<%= course.id %>/update"
                class="course-manage-form"
              >
                <div class="form-grid">
                  <label>
                    Name
                    <input
                      class="form-control form-control-sm"
                      name="course_name"
                      value="<%= course.course_name %>"
                      required
                    />
                  </label>
                  <label>
                    Category
                    <input
                      class="form-control form-control-sm"
                      name="category"
                      value="<%= course.category || '' %>"
                    />
                  </label>
                  <label>
                    Price
                    <input
                      class="form-control form-control-sm"
                      name="price"
                      type="number"
                      step="0.01"
                      min="0"
                      value="<%= course.price %>"
                      required
                    />
                  </label>
                </div>
                <div class="form-footer mt-3">
                  <button class="btn btn-sm btn-outline-primary" type="submit">
                    Save changes
                  </button>
                </div>
              </form>
              <form
                method="POST"
                action="/admin/courses/<%= course.id %>/delete"
                class="text-end mt-2"
                onsubmit="return confirm('Delete this course?');"
              >
                <button class="btn btn-sm btn-outline-danger" type="submit">
                  Delete course
                </button>
              </form>
            </article>
            <% }); %>
          </div>
        <% } %>
      </section>

      <section class="dashboard-panel card shadow-sm mt-3">
        <div class="panel-header d-flex justify-content-between align-items-center mb-3">
          <h2 class="h5 mb-0">Transactions & Wallet Top-ups</h2>
          <span class="text-muted small">
            <%= totalTransactions %> records
          </span>
        </div>
        <div class="table-responsive">
          <table class="table table-borderless align-middle admin-table mb-0">
            <thead>
              <tr>
                <th>ID</th>
                <th>User</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% if (!transactions || transactions.length === 0) { %>
                <tr>
                  <td colspan="6" class="text-muted small text-center">
                    No transactions recorded.
                  </td>
                </tr>
              <% } else { %>
                <% transactions.forEach(function (tx) { %>
                  <tr>
                    <td><%= tx.id %></td>
                    <td><%= tx.user_id %></td>
                    <td class="text-capitalize"><%= tx.type %></td>
                    <td>$<%= Number(tx.amount).toFixed(2) %></td>
                    <td>
                      <span
                        class="status-badge <%=
                          tx.status === 'completed'
                            ? 'status-badge-success'
                            : tx.status === 'pending'
                            ? 'status-badge-warning'
                            : 'status-badge-neutral'
                        %>"
                      >
                        <%= tx.status %>
                      </span>
                    </td>
                    <td>
                      <%= tx.created_at
                        ? new Date(tx.created_at).toLocaleString()
                        : "" %>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>
      </section>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
