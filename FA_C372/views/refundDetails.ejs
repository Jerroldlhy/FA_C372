<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EduSphere | Refund Details</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body class="course-page">
    <%- include("partials/navbar") %>
    <main class="section">
      <div class="container">
        <div class="dashboard-panel mb-3">
          <h1 class="h4">Refund Request #<%= request.id %></h1>
          <p class="mb-1">Order #<%= request.order_id %></p>
          <p class="mb-1">Requested amount: $<%= Number(request.requested_amount || 0).toFixed(2) %></p>
          <p class="mb-1">Status: <span class="text-capitalize"><%= request.status %></span></p>
          <p class="mb-0">Reason: <%= request.reason || "-" %></p>
        </div>
        <div class="dashboard-panel">
          <h2 class="h5">Refund transactions</h2>
          <% if (!refunds || !refunds.length) { %>
            <p class="text-muted mb-0">No refund transaction recorded yet.</p>
          <% } else { %>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Provider</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% refunds.forEach(function(item) { %>
                    <tr>
                      <td><%= item.id %></td>
                      <td class="text-capitalize"><%= item.provider %></td>
                      <td>$<%= Number(item.amount || 0).toFixed(2) %> <%= item.currency || "" %></td>
                      <td><%= item.status || "-" %></td>
                      <td><%= item.created_at ? new Date(item.created_at).toLocaleString() : "" %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } %>
          <div class="mt-3">
            <a class="btn btn-outline-primary btn-sm" href="/refunds">Back to refunds</a>
          </div>
        </div>
      </div>
    </main>
      <%- include("partials/footer") %>
  </body>
</html>
