<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof pageTitle !== 'undefined' ? pageTitle + ' | OpenBridge Learning' : 'OpenBridge Learning' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/styles.css" />
  <script defer src="/js/lighting.js"></script>
  <script defer src="/js/nav.js"></script>
</head>
<body class="theme-learning">
<% const role = user && user.role ? user.role : null; %>
<nav class="main-nav shadow-sm" data-nav>
  <div class="nav-inner container-wide">
    <a href="/" class="nav-brand">
      <img src="/images/logo-edu.svg" alt="OpenBridge Learning logo" class="nav-logo" />
      <span class="brand-text">OpenBridge Learning</span>
    </a>
    <button class="nav-toggle" aria-label="Toggle navigation" data-nav-toggle aria-expanded="false">&#9776;</button>
    <ul class="nav-links">
      <li><a class="nav-link" href="/">Home</a></li>
      <li><a class="nav-link" href="/courses">Courses API</a></li>
      <% if (role === 'student') { %>
        <li><a class="nav-link" href="/dashboard/student">Student Dashboard</a></li>
      <% } %>
      <% if (role === 'lecturer') { %>
        <li><a class="nav-link" href="/dashboard/lecturer">Lecturer Dashboard</a></li>
      <% } %>
      <% if (role === 'admin') { %>
        <li><a class="nav-link" href="/dashboard/admin">Admin Dashboard</a></li>
      <% } %>
    </ul>
    <div class="nav-actions">
      <% if (!user) { %>
        <a href="/login" class="nav-cta">Login</a>
        <a href="/signup" class="nav-cta alt">Register</a>
      <% } else { %>
        <span class="nav-user">Hi, <strong><%= user.username %></strong></span>
        <form action="/logout" method="POST" class="d-inline">
          <button type="submit" class="nav-cta">Logout</button>
        </form>
      <% } %>
    </div>
  </div>
</nav>
<main class="container-wide mt-4">
  <% if (messages && messages.length) { %>
    <div class="alert alert-success"><%= messages.join(', ') %></div>
  <% } %>
  <% if (errors && errors.length) { %>
    <div class="alert alert-danger"><%= errors.join(', ') %></div>
  <% } %>
