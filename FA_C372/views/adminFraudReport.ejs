<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Fraud Audit Report</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body class="admin-dashboard">
    <%- include("partials/navbar") %>
    <main class="admin-main">
      <section class="hero-intro mb-4">
        <div>
          <p class="eyebrow text-uppercase text-muted mb-1">Compliance</p>
          <h1 class="display-6 fw-bold mb-1">Fraud Audit Report</h1>
          <p class="lead text-muted mb-0">
            Date range: <strong><%= filters.from || "All" %></strong> to <strong><%= filters.to || "All" %></strong>
            | Severity: <strong><%= filters.severity || "All" %></strong>
          </p>
        </div>
        <div class="hero-cta">
          <a class="btn btn-outline-primary" href="/admin/reports/fraud/export?format=csv&from=<%= encodeURIComponent(filters.from || '') %>&to=<%= encodeURIComponent(filters.to || '') %>&severity=<%= encodeURIComponent(filters.severity || '') %>">Export CSV</a>
          <a class="btn btn-primary" href="/admin/reports/fraud/export?format=pdf&from=<%= encodeURIComponent(filters.from || '') %>&to=<%= encodeURIComponent(filters.to || '') %>&severity=<%= encodeURIComponent(filters.severity || '') %>">Export PDF</a>
          <a class="btn btn-outline-secondary" href="/admin/reports/audit">Audit log report</a>
          <a class="btn btn-outline-secondary" href="/dashboard/admin">Back to admin dashboard</a>
        </div>
      </section>

      <section class="dashboard-panel card shadow-sm mb-4">
        <div class="card-body">
          <form method="GET" action="/admin/reports/fraud" class="row g-2 align-items-end">
            <div class="col-12 col-md-3">
              <label class="form-label small" for="report_from">From</label>
              <input class="form-control form-control-sm" id="report_from" name="from" type="date" value="<%= filters.from || '' %>" />
            </div>
            <div class="col-12 col-md-3">
              <label class="form-label small" for="report_to">To</label>
              <input class="form-control form-control-sm" id="report_to" name="to" type="date" value="<%= filters.to || '' %>" />
            </div>
            <div class="col-12 col-md-2">
              <label class="form-label small" for="report_severity">Severity</label>
              <select class="form-select form-select-sm js-enhance-select" id="report_severity" name="severity">
                <option value="" <%= !filters.severity ? "selected" : "" %>>All</option>
                <option value="high" <%= filters.severity === "high" ? "selected" : "" %>>High</option>
                <option value="medium" <%= filters.severity === "medium" ? "selected" : "" %>>Medium</option>
                <option value="low" <%= filters.severity === "low" ? "selected" : "" %>>Low</option>
              </select>
            </div>
            <div class="col-12 col-md-2 d-grid">
              <button class="btn btn-outline-secondary btn-sm" type="submit">Apply</button>
            </div>
            <div class="col-12 col-md-2 d-grid">
              <button class="btn btn-sm btn-outline-secondary" type="button" id="reportAll">Clear</button>
            </div>
          </form>
        </div>
      </section>

      <section class="row row-cols-1 row-cols-md-4 g-3 mb-4">
        <article class="stat-card col">
          <p class="stat-label">Total Events</p>
          <p class="stat-value"><%= Number(summary.totalEvents || 0) %></p>
        </article>
        <article class="stat-card col">
          <p class="stat-label">High</p>
          <p class="stat-value"><%= Number(summary.high || 0) %></p>
        </article>
        <article class="stat-card col">
          <p class="stat-label">Medium</p>
          <p class="stat-value"><%= Number(summary.medium || 0) %></p>
        </article>
        <article class="stat-card col">
          <p class="stat-label">Low</p>
          <p class="stat-value"><%= Number(summary.low || 0) %></p>
        </article>
      </section>

      <section class="dashboard-panel card shadow-sm mb-4">
        <div class="panel-header d-flex justify-content-between align-items-center mb-3">
          <h2 class="h5 mb-0">Top Triggered Rules</h2>
          <span class="text-muted small">Top 10</span>
        </div>
        <% if (!summary.topRules || !summary.topRules.length) { %>
          <div class="empty-state">No rule triggers for selected filters.</div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-borderless align-middle admin-table mb-0">
              <thead>
                <tr>
                  <th>Rule</th>
                  <th>Count</th>
                </tr>
              </thead>
              <tbody>
                <% summary.topRules.forEach(function(item) { %>
                  <tr>
                    <td><%= item.ruleCode %></td>
                    <td><%= Number(item.total || 0) %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </section>

      <section class="dashboard-panel card shadow-sm">
        <div class="panel-header d-flex justify-content-between align-items-center mb-3">
          <h2 class="h5 mb-0">Fraud Event Log</h2>
          <span class="text-muted small"><%= report.length %> records</span>
        </div>
        <% if (!report || !report.length) { %>
          <div class="empty-state">No fraud records available for selected filters.</div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-borderless align-middle admin-table mb-0">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Time</th>
                  <th>User</th>
                  <th>Rule</th>
                  <th>Severity</th>
                  <th>Risk</th>
                  <th>Flags</th>
                </tr>
              </thead>
              <tbody>
                <% report.forEach(function(row) { %>
                  <% const details = row.details || {}; %>
                  <tr>
                    <td>#<%= row.id %></td>
                    <td><%= row.created_at ? new Date(row.created_at).toLocaleString() : "" %></td>
                    <td>
                      <div><%= row.user_name || "Unknown user" %></div>
                      <div class="text-muted small"><%= row.user_email || "-" %></div>
                    </td>
                    <td><%= row.rule_code %></td>
                    <td class="text-capitalize"><%= row.severity %></td>
                    <td><%= Number(details.riskScore || 0) %></td>
                    <td class="text-muted small"><%= Array.isArray(details.flags) ? details.flags.join(", ") : "-" %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </section>
    </main>
    <script>
      (function () {
        const from = document.getElementById("report_from");
        const to = document.getElementById("report_to");
        const severity = document.getElementById("report_severity");
        const allBtn = document.getElementById("reportAll");
        if (!from || !to || !severity || !allBtn) return;
        allBtn.addEventListener("click", () => {
          from.value = "";
          to.value = "";
          severity.value = "";
        });
      })();
    </script>
  </body>
</html>
