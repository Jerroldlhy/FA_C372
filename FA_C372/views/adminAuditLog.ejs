<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Audit Log</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body class="admin-dashboard">
    <%- include("partials/navbar") %>
    <main class="admin-main">
      <section class="hero-intro mb-4">
        <div>
          <p class="eyebrow text-uppercase text-muted mb-1">Compliance</p>
          <h1 class="display-6 fw-bold mb-1">Audit Log Report</h1>
          <p class="lead text-muted mb-0">Track critical user and admin actions with filterable evidence export.</p>
        </div>
        <%- include("partials/adminReportActions", {
          exportCsvUrl: `/admin/reports/audit/export?format=csv&from=${encodeURIComponent(filters.from || "")}&to=${encodeURIComponent(filters.to || "")}&activity_type=${encodeURIComponent(filters.activityType || "")}&user_id=${encodeURIComponent(filters.userId || "")}&actor_user_id=${encodeURIComponent(filters.actorUserId || "")}`,
          exportPdfUrl: `/admin/reports/audit/export?format=pdf&from=${encodeURIComponent(filters.from || "")}&to=${encodeURIComponent(filters.to || "")}&activity_type=${encodeURIComponent(filters.activityType || "")}&user_id=${encodeURIComponent(filters.userId || "")}&actor_user_id=${encodeURIComponent(filters.actorUserId || "")}`,
          links: {
            sales: "/admin/reports/sales",
            fraud: "/admin/reports/fraud",
            audit: "/admin/reports/audit"
          },
          activeReport: "/admin/reports/audit"
        }) %>
      </section>

      <section class="dashboard-panel card shadow-sm mb-4">
        <div class="card-body">
          <form method="GET" action="/admin/reports/audit" class="row g-2 align-items-end">
            <div class="col-12 col-md-2">
              <label class="form-label small" for="report_from">From</label>
              <input class="form-control form-control-sm" id="report_from" name="from" type="date" value="<%= filters.from || '' %>" />
            </div>
            <div class="col-12 col-md-2">
              <label class="form-label small" for="report_to">To</label>
              <input class="form-control form-control-sm" id="report_to" name="to" type="date" value="<%= filters.to || '' %>" />
            </div>
            <div class="col-12 col-md-3">
              <label class="form-label small" for="activity_type">Activity type</label>
              <select class="form-select form-select-sm js-enhance-select" id="activity_type" name="activity_type">
                <option value="">All</option>
                <% (activityTypes || []).forEach(function (type) { %>
                  <option value="<%= type %>" <%= filters.activityType === type ? "selected" : "" %>><%= type %></option>
                <% }); %>
              </select>
            </div>
            <div class="col-12 col-md-2">
              <label class="form-label small" for="user_id">User ID</label>
              <input class="form-control form-control-sm" id="user_id" name="user_id" type="number" min="1" value="<%= filters.userId || '' %>" />
            </div>
            <div class="col-12 col-md-2">
              <label class="form-label small" for="actor_user_id">Actor ID</label>
              <input class="form-control form-control-sm" id="actor_user_id" name="actor_user_id" type="number" min="1" value="<%= filters.actorUserId || '' %>" />
            </div>
            <div class="col-12 col-md-1 d-grid">
              <button class="btn btn-sm btn-outline-secondary" type="submit">Apply</button>
            </div>
          </form>
        </div>
      </section>

      <section class="row row-cols-1 row-cols-md-3 g-3 mb-4">
        <article class="stat-card col">
          <p class="stat-label">Total Events</p>
          <p class="stat-value"><%= Number(summary.totalEvents || 0) %></p>
        </article>
        <article class="stat-card col">
          <p class="stat-label">Affected Users</p>
          <p class="stat-value"><%= Number(summary.affectedUsers || 0) %></p>
        </article>
        <article class="stat-card col">
          <p class="stat-label">Actors</p>
          <p class="stat-value"><%= Number(summary.actors || 0) %></p>
        </article>
      </section>

      <section class="dashboard-panel card shadow-sm mb-4">
        <div class="panel-header d-flex justify-content-between align-items-center mb-3">
          <h2 class="h5 mb-0">Top Activities</h2>
          <span class="text-muted small">Top 10</span>
        </div>
        <% if (!summary.topActivities || !summary.topActivities.length) { %>
          <div class="empty-state">No activity records for selected filters.</div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-borderless align-middle admin-table mb-0">
              <thead>
                <tr><th>Activity</th><th>Count</th></tr>
              </thead>
              <tbody>
                <% summary.topActivities.forEach(function (item) { %>
                  <tr><td><%= item.activityType %></td><td><%= Number(item.total || 0) %></td></tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </section>

      <section class="dashboard-panel card shadow-sm">
        <div class="panel-header d-flex justify-content-between align-items-center mb-3">
          <h2 class="h5 mb-0">Audit Events</h2>
          <span class="text-muted small"><%= report.length %> records</span>
        </div>
        <% if (!report || !report.length) { %>
          <div class="empty-state">No audit records found.</div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-borderless align-middle admin-table mb-0">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>When</th>
                  <th>User</th>
                  <th>Actor</th>
                  <th>Activity</th>
                  <th>IP</th>
                </tr>
              </thead>
              <tbody>
                <% report.forEach(function (item) { %>
                  <tr>
                    <td>#<%= item.id %></td>
                    <td><%= item.created_at ? new Date(item.created_at).toLocaleString() : "" %></td>
                    <td>
                      <div><%= item.user_name || ("User #" + item.user_id) %></div>
                      <div class="text-muted small"><%= item.user_email || "-" %></div>
                    </td>
                    <td>
                      <div><%= item.actor_name || (item.actor_user_id ? ("User #" + item.actor_user_id) : "-") %></div>
                      <div class="text-muted small"><%= item.actor_email || "-" %></div>
                    </td>
                    <td><%= item.activity_type %></td>
                    <td><%= item.ip_address || "-" %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </section>
    </main>
      <%- include("partials/footer") %>
  </body>
</html>
