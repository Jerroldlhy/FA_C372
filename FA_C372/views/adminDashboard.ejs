<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <main class="container py-5">
      <div class="mb-4 d-flex flex-wrap align-items-center justify-content-between">
        <div>
          <h1 class="display-6 fw-semibold mb-1">Admin Dashboard</h1>
          <p class="text-muted mb-0">Manage users, courses, and transactions.</p>
        </div>
        <a class="btn btn-outline-secondary" href="/">Back to catalog</a>
      </div>

      <% if (status && status.course_created) { %>
        <div class="alert alert-success">Course created.</div>
      <% } %>
      <% if (status && status.course_updated) { %>
        <div class="alert alert-success">Course updated.</div>
      <% } %>
      <% if (status && status.course_deleted) { %>
        <div class="alert alert-success">Course deleted.</div>
      <% } %>
      <% if (status && status.course_error) { %>
        <div class="alert alert-danger">Course name and price are required.</div>
      <% } %>

      <div class="row g-4">
        <div class="col-12 col-xl-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title mb-3">Registered Users</h5>
              <div class="table-responsive">
                <table class="table table-sm align-middle">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Role</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!users || users.length === 0) { %>
                      <tr>
                        <td colspan="4" class="text-muted">No users found.</td>
                      </tr>
                    <% } else { %>
                      <% users.forEach(function(user) { %>
                        <tr>
                          <td><%= user.user_id %></td>
                          <td>
                            <%= user.first_name && user.last_name
                              ? user.first_name + " " + user.last_name
                              : user.username %>
                          </td>
                          <td><%= user.email %></td>
                          <td class="text-capitalize"><%= user.role %></td>
                        </tr>
                      <% }); %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="col-12 col-xl-6">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title mb-3">Add a Course</h5>
              <form method="POST" action="/admin/courses">
                <div class="row g-3">
                  <div class="col-12">
                    <label class="form-label" for="course_name">Course Name</label>
                    <input
                      class="form-control"
                      id="course_name"
                      name="course_name"
                      required
                    />
                  </div>
                  <div class="col-12 col-md-6">
                    <label class="form-label" for="category">Category</label>
                    <input class="form-control" id="category" name="category" />
                  </div>
                  <div class="col-12 col-md-6">
                    <label class="form-label" for="price">Price</label>
                    <input
                      class="form-control"
                      id="price"
                      name="price"
                      type="number"
                      step="0.01"
                      min="0"
                      required
                    />
                  </div>
                  <div class="col-12 col-md-6">
                    <label class="form-label" for="skill_level">Skill Level</label>
                    <input class="form-control" id="skill_level" name="skill_level" />
                  </div>
                  <div class="col-12 col-md-6">
                    <label class="form-label" for="language">Language</label>
                    <input class="form-control" id="language" name="language" />
                  </div>
                  <div class="col-12">
                    <label class="form-label" for="description">Description</label>
                    <textarea
                      class="form-control"
                      id="description"
                      name="description"
                      rows="2"
                    ></textarea>
                  </div>
                  <div class="col-12">
                    <label class="form-label" for="instructor_id">
                      Instructor ID
                    </label>
                    <input
                      class="form-control"
                      id="instructor_id"
                      name="instructor_id"
                      type="number"
                      min="1"
                    />
                  </div>
                  <div class="col-12">
                    <button class="btn btn-primary w-100" type="submit">
                      Create Course
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>

        <div class="col-12">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title mb-3">Manage Courses</h5>
              <div class="table-responsive">
                <table class="table table-sm align-middle">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Course</th>
                      <th>Category</th>
                      <th>Level</th>
                      <th>Language</th>
                      <th>Price</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!courses || courses.length === 0) { %>
                      <tr>
                        <td colspan="7" class="text-muted">No courses found.</td>
                      </tr>
                    <% } else { %>
                      <% courses.forEach(function(course) { %>
                        <tr>
                          <form method="POST" action="/admin/courses/<%= course.course_id %>/update">
                            <td><%= course.course_id %></td>
                            <td>
                              <input
                                class="form-control form-control-sm"
                                name="course_name"
                                value="<%= course.course_name %>"
                                required
                              />
                            </td>
                            <td>
                              <input
                                class="form-control form-control-sm"
                                name="category"
                                value="<%= course.category || '' %>"
                              />
                            </td>
                            <td>
                              <input
                                class="form-control form-control-sm"
                                name="skill_level"
                                value="<%= course.skill_level || '' %>"
                              />
                            </td>
                            <td>
                              <input
                                class="form-control form-control-sm"
                                name="language"
                                value="<%= course.language || '' %>"
                              />
                            </td>
                            <td>
                              <input
                                class="form-control form-control-sm"
                                name="price"
                                type="number"
                                step="0.01"
                                min="0"
                                value="<%= course.price %>"
                                required
                              />
                            </td>
                            <td class="d-flex gap-2">
                              <button class="btn btn-sm btn-outline-primary" type="submit">
                                Save
                              </button>
                          </form>
                          <form method="POST" action="/admin/courses/<%= course.course_id %>/delete">
                            <button
                              class="btn btn-sm btn-outline-danger"
                              type="submit"
                              onclick="return confirm('Delete this course?');"
                            >
                              Delete
                            </button>
                          </form>
                            </td>
                        </tr>
                      <% }); %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="col-12">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title mb-3">Transactions & Wallet Top-ups</h5>
              <div class="table-responsive">
                <table class="table table-sm align-middle">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>User</th>
                      <th>Type</th>
                      <th>Amount</th>
                      <th>Status</th>
                      <th>Date</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!transactions || transactions.length === 0) { %>
                      <tr>
                        <td colspan="6" class="text-muted">
                          No transactions recorded.
                        </td>
                      </tr>
                    <% } else { %>
                      <% transactions.forEach(function(tx) { %>
                        <tr>
                          <td><%= tx.transaction_id %></td>
                          <td><%= tx.user_id %></td>
                          <td class="text-capitalize"><%= tx.transaction_type %></td>
                          <td>$<%= Number(tx.amount).toFixed(2) %></td>
                          <td class="text-capitalize"><%= tx.transaction_status %></td>
                          <td>
                            <%= tx.created_at ? new Date(tx.created_at).toLocaleString() : "" %>
                          </td>
                        </tr>
                      <% }); %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
