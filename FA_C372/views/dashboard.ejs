<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <main class="container py-5">
      <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
        <div>
          <h1 class="display-6 fw-semibold mb-1">Student Dashboard</h1>
          <p class="text-muted mb-0">Track your courses and wallet activity.</p>
        </div>
        <form method="POST" action="/logout">
          <button class="btn btn-outline-secondary" type="submit">Log out</button>
        </form>
      </div>

      <% if (status && status.topup_success) { %>
        <div class="alert alert-success">Wallet top-up successful.</div>
      <% } %>
      <% if (status && status.topup_error) { %>
        <div class="alert alert-danger">Enter a valid top-up amount.</div>
      <% } %>

      <div class="row g-4">
        <div class="col-12 col-xl-8">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title mb-3">My Enrolled Courses</h5>
              <div class="table-responsive">
                <table class="table table-sm align-middle">
                  <thead>
                    <tr>
                      <th>Course</th>
                      <th>Category</th>
                      <th>Price</th>
                      <th>Details</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!enrollments || enrollments.length === 0) { %>
                      <tr>
                        <td colspan="4" class="text-muted">
                          You are not enrolled in any courses yet.
                        </td>
                      </tr>
                    <% } else { %>
                      <% enrollments.forEach(function(item) { %>
                        <tr>
                          <td><%= item.course_name %></td>
                          <td><%= item.category %></td>
                          <td>$<%= Number(item.price).toFixed(2) %></td>
                          <td>
                            <a
                              class="btn btn-sm btn-outline-primary"
                              href="/courses/<%= item.course_id %>"
                            >
                              View
                            </a>
                          </td>
                        </tr>
                      <% }); %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="col-12 col-xl-4">
          <div class="card shadow-sm mb-4">
            <div class="card-body">
              <h5 class="card-title mb-2">Wallet Balance</h5>
              <div class="display-6 fw-semibold mb-3">
                $<%= Number(walletBalance || 0).toFixed(2) %>
              </div>
              <form method="POST" action="/wallet/topup">
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input
                    class="form-control"
                    name="amount"
                    type="number"
                    step="0.01"
                    min="1"
                    placeholder="Top-up amount"
                    required
                  />
                  <button class="btn btn-success" type="submit">Top Up</button>
                </div>
              </form>
            </div>
          </div>

          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title mb-3">Payment History</h5>
              <div class="table-responsive">
                <table class="table table-sm align-middle mb-0">
                  <thead>
                    <tr>
                      <th>Type</th>
                      <th>Amount</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!transactions || transactions.length === 0) { %>
                      <tr>
                        <td colspan="3" class="text-muted">No transactions.</td>
                      </tr>
                    <% } else { %>
                      <% transactions.forEach(function(tx) { %>
                        <tr>
                          <td class="text-capitalize"><%= tx.transaction_type %></td>
                          <td>$<%= Number(tx.amount).toFixed(2) %></td>
                          <td class="text-capitalize"><%= tx.transaction_status %></td>
                        </tr>
                      <% }); %>
                    <% } %>
                  </tbody>
                </table>
              </div>
              <small class="text-muted d-block mt-2">
                Latest transactions shown.
              </small>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
