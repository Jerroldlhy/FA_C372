<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin | Refund Details</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body class="admin-dashboard">
    <%- include("partials/navbar") %>
    <main class="admin-main">
      <% if (status?.refund_success === "approved") { %>
        <div class="alert alert-success">Refund approved successfully.</div>
      <% } %>
      <% if (status?.refund_success === "rejected") { %>
        <div class="alert alert-success">Refund rejected.</div>
      <% } %>
      <% if (status?.refund_error === "not_pending") { %>
        <div class="alert alert-warning">This request is no longer pending.</div>
      <% } %>
      <% if (status?.refund_error === "approve_failed") { %>
        <div class="alert alert-danger">Refund approval failed. Request marked as failed.</div>
      <% } %>
      <% if (status?.refund_error === "missing_reference") { %>
        <div class="alert alert-danger">Missing provider transaction reference for this payment.</div>
      <% } %>
      <% if (status?.refund_error === "unsupported_method") { %>
        <div class="alert alert-danger">Unsupported payment method for automatic refund.</div>
      <% } %>
      <section class="dashboard-panel card shadow-sm mb-3">
        <div class="card-body">
          <h1 class="h4 mb-3">Refund Request #<%= request.id %></h1>
          <p class="mb-1">User: <strong><%= request.user_name %></strong> (<%= request.user_email %>)</p>
          <p class="mb-1">Order #<%= request.order_id %> Â· Payment: <span class="text-capitalize"><%= request.payment_method || "-" %></span></p>
          <p class="mb-1">Amount: $<%= Number(request.requested_amount || 0).toFixed(2) %></p>
          <p class="mb-1">Status: <span class="text-capitalize"><%= request.status %></span></p>
          <p class="mb-0">Reason: <%= request.reason || "-" %></p>
          <% if (String(request.status || "").toLowerCase() === "pending") { %>
            <div class="mt-3 d-flex gap-2">
              <form method="POST" action="/admin/refunds/<%= request.id %>/approve">
                <input type="hidden" name="admin_note" value="Approved by admin (wallet credit)" />
                <button class="btn btn-sm btn-primary" type="submit" onclick="return confirm('Approve full refund, credit wallet, and remove enrollment?');">Approve full refund</button>
              </form>
              <form method="POST" action="/admin/refunds/<%= request.id %>/reject">
                <input type="hidden" name="admin_note" value="Rejected by admin" />
                <button class="btn btn-sm btn-outline-danger" type="submit">Reject</button>
              </form>
            </div>
          <% } %>
        </div>
      </section>
      <section class="dashboard-panel card shadow-sm">
        <div class="card-body">
          <h2 class="h5 mb-3">Refund transactions</h2>
          <% if (!refunds || !refunds.length) { %>
            <p class="text-muted mb-0">No refund transaction recorded yet.</p>
          <% } else { %>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Provider</th>
                    <th>Provider Refund ID</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% refunds.forEach(function(item) { %>
                    <tr>
                      <td><%= item.id %></td>
                      <td class="text-capitalize"><%= item.provider %></td>
                      <td><%= item.provider_refund_id || "-" %></td>
                      <td>$<%= Number(item.amount || 0).toFixed(2) %> <%= item.currency || "" %></td>
                      <td><%= item.status || "-" %></td>
                      <td><%= item.created_at ? new Date(item.created_at).toLocaleString() : "" %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } %>
          <div class="mt-3">
            <a class="btn btn-outline-primary btn-sm" href="/admin/refunds">Back</a>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>
