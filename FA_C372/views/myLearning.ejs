<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EduSphere | My Learning</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body class="course-page">
    <%- include("partials/navbar") %>
    <main class="section">
      <div class="container">
        <div class="course-hero mb-4">
          <div>
            <p class="eyebrow text-uppercase text-muted mb-2">Student Space</p>
            <h1 class="display-6 fw-bold mb-1">My Learning</h1>
            <p class="text-muted mb-0">Only your enrolled courses appear here.</p>
          </div>
        </div>

        <% if (status?.error === "invalid_course") { %>
          <div class="alert alert-danger">Invalid course access.</div>
        <% } %>
        <% if (status?.error === "invalid_lesson") { %>
          <div class="alert alert-danger">Invalid lesson request.</div>
        <% } %>

        <div class="dashboard-panel">
          <% if (!enrollments || enrollments.length === 0) { %>
            <div class="empty-state">
              <p class="mb-2">No enrolled courses yet.</p>
              <a href="/courses" class="btn btn-outline btn-sm">Browse courses</a>
            </div>
          <% } else { %>
            <div class="row g-3">
              <% enrollments.forEach(function(item) { %>
                <% const progress = Math.max(0, Math.min(Number(item.progress || 0), 100)); %>
                <div class="col-12 col-md-6">
                  <article class="course-card">
                    <p class="text-muted small mb-1"><%= item.category || "General" %></p>
                    <h3 class="h5"><%= item.course_name %></h3>
                    <div class="progress mb-2" style="height: 8px;">
                      <div
                        class="progress-bar"
                        role="progressbar"
                        style="width: <%= progress %>%"
                        aria-valuenow="<%= progress %>"
                        aria-valuemin="0"
                        aria-valuemax="100"
                      ></div>
                    </div>
                    <p class="text-muted small mb-3"><%= progress %>% complete</p>
                    <a class="btn btn-sm btn-outline-primary" href="/learning/<%= item.course_id %>">Open course</a>
                  </article>
                </div>
              <% }); %>
            </div>
          <% } %>
        </div>
      </div>
    </main>
  </body>
</html>
