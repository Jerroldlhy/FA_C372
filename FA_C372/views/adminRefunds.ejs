<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin | Refund Requests</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body class="admin-dashboard">
    <%- include("partials/navbar") %>
    <main class="admin-main">
      <section class="dashboard-panel card shadow-sm">
        <div class="card-body">
          <h1 class="h4 mb-3">Refund Requests</h1>
          <% if (!requests || !requests.length) { %>
            <p class="text-muted mb-0">No refund requests.</p>
          <% } else { %>
            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead>
                  <tr>
                    <th>Request #</th>
                    <th>User</th>
                    <th>Order #</th>
                    <th>Method</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% requests.forEach(function(item) { %>
                    <tr>
                      <td><%= item.id %></td>
                      <td><%= item.user_name || "-" %><div class="small text-muted"><%= item.user_email || "" %></div></td>
                      <td><%= item.order_id %></td>
                      <td class="text-capitalize"><%= item.payment_method || "-" %></td>
                      <td>$<%= Number(item.requested_amount || 0).toFixed(2) %></td>
                      <td class="text-capitalize"><%= item.status %></td>
                      <td><%= item.created_at ? new Date(item.created_at).toLocaleString() : "" %></td>
                      <td><a class="btn btn-sm btn-outline-primary" href="/admin/refunds/<%= item.id %>">View</a></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </section>
    </main>
      <%- include("partials/footer") %>
  </body>
</html>
