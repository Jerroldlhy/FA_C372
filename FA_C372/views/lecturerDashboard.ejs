    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      (function () {
        const rosterSearch = document.getElementById("rosterSearch");
        const rosterSort = document.getElementById("rosterSort");
        const studentRows = Array.from(document.querySelectorAll(".roster-student"));
        if (!studentRows.length) return;

        const sortRows = (mode) => {
          const lists = Array.from(document.querySelectorAll(".roster-list"));
          lists.forEach((list) => {
            const items = Array.from(list.querySelectorAll(".roster-student"));
            items.sort((a, b) => {
              const pa = Number(a.getAttribute("data-progress") || 0);
              const pb = Number(b.getAttribute("data-progress") || 0);
              const ta = Number(a.getAttribute("data-enrolled-at") || 0);
              const tb = Number(b.getAttribute("data-enrolled-at") || 0);
              const na = String(a.getAttribute("data-name") || "");
              const nb = String(b.getAttribute("data-name") || "");
              if (mode === "progress_asc") return pa - pb;
              if (mode === "progress_desc") return pb - pa;
              if (mode === "date_asc") return ta - tb;
              if (mode === "date_desc") return tb - ta;
              return na.localeCompare(nb);
            });
            items.forEach((item) => list.appendChild(item));
          });
        };

        const applyFilter = () => {
          const q = String((rosterSearch && rosterSearch.value) || "").trim().toLowerCase();
          studentRows.forEach((row) => {
            const text = String(row.getAttribute("data-search") || "");
            row.style.display = !q || text.includes(q) ? "" : "none";
          });
        };

        if (rosterSort) {
          rosterSort.addEventListener("change", () => sortRows(rosterSort.value));
          sortRows(rosterSort.value);
        }
        if (rosterSearch) {
          rosterSearch.addEventListener("input", applyFilter);
        }

        const createForm = document.querySelector(".creation-card form");
        if (createForm) {
          createForm.addEventListener("submit", function (event) {
            const title = (createForm.querySelector("[name='course_name']")?.value || "").trim();
            const price = Number(createForm.querySelector("[name='price']")?.value || 0);
            if (!title || !Number.isFinite(price) || price < 0) {
              event.preventDefault();
              alert("Please provide a valid course title and price.");
              return;
            }
            const ok = confirm("Publish this course now?");
            if (!ok) event.preventDefault();
          });
        }
      })();
    </script>
