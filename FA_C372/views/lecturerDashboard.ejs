<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EduSphere | Lecturer Workspace</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@300..800&family=Space+Grotesk:wght@400..700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body class="instructor-dashboard lecturer-dashboard">
    <%- include("partials/navbar") %>
    <main class="section instructor-section lecturer-dashboard">
      <div class="container">
        <header class="lecturer-header mb-4">
          <div>
            <p class="eyebrow text-uppercase text-muted mb-1">Lecturer workspace</p>
            <h1 class="display-5 fw-bold mb-2">Own, polish, and ship your learning paths</h1>
            <p class="text-muted mb-0">
              Track enrollments, publish updates, and keep every student in the loop without leaving the dashboard.
            </p>
          </div>
          <div class="lecturer-header-stats">
            <div>
              <strong><%= courses.length %></strong>
              <span>Courses</span>
            </div>
            <div>
              <strong><%= totalEnrollments %></strong>
              <span>Enrollments</span>
            </div>
            <div>
              <strong>$<%= Number(totalRevenue || 0).toFixed(2) %></strong>
              <span>Revenue</span>
            </div>
            <div>
              <strong><%= studentCount %></strong>
              <span>Active learners</span>
            </div>
          </div>
        </header>

        <% const alertStatus = status || {}; %>
        <% if (alertStatus.course_created || alertStatus.course_updated) { %>
          <div class="alert alert-success mb-3">
            <strong class="me-2">Done!</strong>
            <span>
              <%= alertStatus.course_updated ? "Course saved." : "Course created." %>
            </span>
          </div>
        <% } %>
        <% if (alertStatus.announcement_sent) { %>
          <div class="alert alert-success mb-3">
            Announcement successfully sent to enrolled learners.
          </div>
        <% } %>
        <% if (alertStatus.announcement_error) { %>
          <div class="alert alert-danger mb-3">
            <strong>Heads up:</strong> Please give your announcement a title before sending.
          </div>
        <% } %>

        <section class="dashboard-panel card shadow-sm mb-4">
          <div class="card-body py-2">
            <nav class="nav nav-pills gap-2 lecturer-subnav">
              <a class="btn btn-sm btn-outline-secondary" href="#lecturerRevenue">Revenue</a>
              <a class="btn btn-sm btn-outline-secondary" href="#lecturerCourses">Courses</a>
              <a class="btn btn-sm btn-outline-secondary" href="#lecturerFeedback">Feedback</a>
              <a class="btn btn-sm btn-outline-secondary" href="#lecturerAnnouncements">Announcements</a>
              <a class="btn btn-sm btn-outline-secondary" href="#lecturerRoster">Roster</a>
              <a class="btn btn-sm btn-outline-secondary" href="#lecturerAnalytics">Analytics</a>
            </nav>
          </div>
        </section>

        <section class="row g-4">
          <div class="col-12">
            <div class="card shadow-sm revenue-card" id="lecturerRevenue">
              <div class="card-body">
                <div class="revenue-header">
                  <div class="revenue-title">
                    <span class="badge-status badge-status-warning text-uppercase">Admin-managed</span>
                    <div>
                      <h5 class="card-title mb-1">Revenue + payout overview</h5>
                      <p class="text-muted mb-0">
                        Totals are derived from students who purchased your courses. Payouts are issued by the admin team.
                      </p>
                    </div>
                  </div>
                  <div class="text-muted small text-end revenue-note">
                    <p class="mb-1">Read-only</p>
                    <span>Contact finance for disbursements</span>
                  </div>
                </div>
                <div class="revenue-stats mt-4">
                  <div>
                    <span>Total revenue</span>
                    <strong>$<%= Number(revenueSummary?.totalRevenue || 0).toFixed(2) %></strong>
                  </div>
                  <div>
                    <span>Pending payout (est.)</span>
                    <strong>$<%= Number(pendingPayoutEstimate || 0).toFixed(2) %></strong>
                  </div>
                  <div>
                    <span>Orders processed</span>
                    <strong><%= revenueSummary?.orderCount || 0 %></strong>
                  </div>
                  <div>
                    <span>Courses with sales</span>
                    <strong><%= revenueSummary?.courseCount || 0 %></strong>
                  </div>
                </div>
                <p class="text-muted small mt-2 mb-0">
                  Last payout date:
                  <strong><%= lastPayout ? new Date(lastPayout).toLocaleDateString() : "Not recorded yet" %></strong>
                </p>
                <% if (monthlyRevenue?.length) { %>
                  <div class="monthly-list mt-3">
                    <% monthlyRevenue.forEach(function(point) { %>
                      <div class="monthly-row">
                        <span><%= point.period %></span>
                        <strong>$<%= Number(point.revenue || 0).toFixed(2) %></strong>
                      </div>
                    <% }); %>
                  </div>
                <% } else { %>
                  <p class="text-muted small mt-3 mb-0">Revenue will appear here once learners purchase your courses.</p>
                <% } %>
              </div>
            </div>
          </div>
        </section>

        <section class="row g-4 mt-1">
          <div class="col-lg-8">
            <div class="card shadow-sm course-card" id="lecturerCourses">
              <div class="card-body">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start gap-3 mb-3">
                  <div>
                    <h5 class="card-title mb-1">Course analytics & management</h5>
                    <p class="text-muted small mb-0">You control only your portfolio.</p>
                  </div>
                  <div class="badge-status badge-status-success text-uppercase">Published</div>
                </div>
                <% if (!courses.length) { %>
                  <p class="text-muted small mb-0">Publish your first course to start collecting data.</p>
                <% } else { %>
                  <div class="course-list">
                    <% courses.forEach(function(course) { %>
                      <div class="course-panel">
                        <div class="course-panel-header">
                          <div>
                            <strong><%= course.course_name %></strong>
                            <p class="text-muted small mb-0">
                              <%= course.category || "General" %> ·
                              <%= course.level || "All levels" %> ·
                              <%= course.language || "Any language" %>
                            </p>
                          </div>
                          <span class="badge-status <%= course.is_active ? "badge-status-success" : "badge-status-muted" %>">
                            <%= course.is_active ? "Published" : "Draft" %>
                          </span>
                        </div>
                        <div class="course-metrics">
                          <div>
                            <span>Enrollments</span>
                            <strong><%= course.enrollment_count %></strong>
                          </div>
                          <div>
                            <span>Revenue</span>
                            <strong>$<%= Number(course.revenue || 0).toFixed(2) %></strong>
                          </div>
                          <div>
                            <span>Avg. rating</span>
                            <strong><%= Number(course.avg_rating || 0).toFixed(1) %></strong>
                          </div>
                          <div>
                            <span>Avg. progress</span>
                            <strong><%= Number(course.avg_progress || 0).toFixed(1) %>%</strong>
                          </div>
                        </div>
                        <form method="POST" action="/courses/<%= course.id %>/update">
                          <input type="hidden" name="redirect_to" value="lecturer_dashboard" />
                          <div class="row g-2">
                            <div class="col-sm-6">
                              <label class="form-label small">Title</label>
                              <input
                                class="form-control form-control-sm"
                                name="course_name"
                                value="<%= course.course_name %>"
                                required
                              />
                            </div>
                            <div class="col-sm-6">
                              <label class="form-label small">Price</label>
                              <input
                                class="form-control form-control-sm"
                                type="number"
                                min="0"
                                step="0.01"
                                name="price"
                                value="<%= Number(course.price || 0).toFixed(2) %>"
                                required
                              />
                            </div>
                          </div>
                          <div class="row g-2 mt-2">
                            <div class="col-sm-4">
                              <label class="form-label small">Category</label>
                            <input class="form-control form-control-sm" name="category" value="<%= course.category || '' %>" />
                            </div>
                            <div class="col-sm-4">
                              <label class="form-label small">Level</label>
                              <input class="form-control form-control-sm" name="level" value="<%= course.level || '' %>" />
                            </div>
                            <div class="col-sm-4">
                              <label class="form-label small">Language</label>
                              <input class="form-control form-control-sm" name="language" value="<%= course.language || '' %>" />
                            </div>
                          </div>
                          <div class="row g-2 mt-2">
                            <div class="col-12">
                              <label class="form-label small">Description</label>
                              <textarea
                                class="form-control form-control-sm"
                                name="description"
                                rows="1"
                              ><%= course.description %></textarea>
                            </div>
                          </div>
                          <div class="form-check form-switch mt-2">
                            <input type="hidden" name="is_active" value="0" />
                            <input
                              class="form-check-input"
                              type="checkbox"
                              id="courseActive_<%= course.id %>"
                              name="is_active"
                              value="1"
                              <%= course.is_active ? "checked" : "" %>
                            />
                            <label class="form-check-label small" for="courseActive_<%= course.id %>">
                              Published
                            </label>
                          </div>
                          <button class="btn btn-primary btn-sm mt-2" type="submit">Save changes</button>
                        </form>
                      </div>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
            <div class="card shadow-sm trend-card mt-4" id="lecturerFeedback">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h5 class="card-title mb-0">Detailed student feedback</h5>
                  <span class="text-muted small">Full reviews by course</span>
                </div>
                <% if (!courses.length) { %>
                  <p class="text-muted small mb-0">Create and publish courses to start collecting feedback.</p>
                <% } else { %>
                  <div class="accordion" id="feedbackAccordion">
                    <% courses.forEach(function(course, idx) { %>
                      <% const courseReviews = reviewsByCourse && reviewsByCourse[course.id] ? reviewsByCourse[course.id] : []; %>
                      <div class="accordion-item mb-2">
                        <h2 class="accordion-header" id="feedbackHeading_<%= course.id %>">
                          <button
                            class="accordion-button <%= idx === 0 ? '' : 'collapsed' %>"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#feedbackCollapse_<%= course.id %>"
                            aria-expanded="<%= idx === 0 ? 'true' : 'false' %>"
                            aria-controls="feedbackCollapse_<%= course.id %>"
                          >
                            <span class="me-2"><%= course.course_name %></span>
                            <span class="text-muted small">(<%= courseReviews.length %> review<%= courseReviews.length === 1 ? '' : 's' %>)</span>
                          </button>
                        </h2>
                        <div
                          id="feedbackCollapse_<%= course.id %>"
                          class="accordion-collapse collapse <%= idx === 0 ? 'show' : '' %>"
                          aria-labelledby="feedbackHeading_<%= course.id %>"
                          data-bs-parent="#feedbackAccordion"
                        >
                          <div class="accordion-body">
                            <% if (!courseReviews.length) { %>
                              <p class="text-muted small mb-0">No reviews for this course yet.</p>
                            <% } else { %>
                              <ul class="list-group list-group-flush">
                                <% courseReviews.forEach(function(review) { %>
                                  <li class="list-group-item px-0 py-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                      <strong><%= review.student_name || "Student" %></strong>
                                      <span class="text-muted small"><%= review.created_at ? new Date(review.created_at).toLocaleDateString() : "" %></span>
                                    </div>
                                    <p class="text-muted small mb-1">Rating: <%= Number(review.rating || 0).toFixed(1) %>/5</p>
                                    <p class="mb-0"><%= review.review || "No written feedback." %></p>
                                  </li>
                                <% }); %>
                              </ul>
                            <% } %>
                          </div>
                        </div>
                      </div>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
            <div class="card shadow-sm trend-card mt-4" id="lecturerAnalytics">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h5 class="card-title mb-0">Completion trend</h5>
                  <span class="text-muted small">Monthly progress</span>
                </div>
                <% if (!completionTrend.length) { %>
                  <p class="text-muted small mb-0">Progress data appears as learners move through your courses.</p>
                <% } else { %>
                  <ul class="list-group list-group-flush">
                    <% completionTrend.forEach(function(point) { %>
                      <li class="list-group-item px-0 py-2 d-flex justify-content-between align-items-center">
                        <span><%= point.period %></span>
                        <strong><%= Number(point.avg_progress || 0).toFixed(1) %>%</strong>
                      </li>
                    <% }); %>
                  </ul>
                <% } %>
              </div>
            </div>
            <div class="card shadow-sm trend-card mt-4">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h5 class="card-title mb-0">Enrollment growth</h5>
                  <span class="text-muted small">New learners per month</span>
                </div>
                <% if (!enrollmentTrend || !enrollmentTrend.length) { %>
                  <p class="text-muted small mb-0">Enrollment trend appears after students start joining courses.</p>
                <% } else { %>
                  <ul class="list-group list-group-flush">
                    <% enrollmentTrend.forEach(function(point) { %>
                      <li class="list-group-item px-0 py-2 d-flex justify-content-between align-items-center">
                        <span><%= point.period %></span>
                        <strong><%= Number(point.enrollment_count || 0) %></strong>
                      </li>
                    <% }); %>
                  </ul>
                <% } %>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="card shadow-sm creation-card">
              <div class="card-body">
                <h5 class="card-title mb-3">Create a new course</h5>
                <form method="POST" action="/courses">
                  <input type="hidden" name="redirect_to" value="lecturer_dashboard" />
                  <div class="mb-3">
                    <label class="form-label small" for="course_name">Course title</label>
                    <input class="form-control form-control-sm" id="course_name" name="course_name" required />
                  </div>
                  <div class="mb-3">
                    <label class="form-label small" for="price">Price</label>
                    <input class="form-control form-control-sm" id="price" name="price" type="number" min="0" step="0.01" required />
                  </div>
                  <div class="row g-2 mb-3">
                    <div class="col-6">
                      <label class="form-label small" for="category">Category</label>
                      <input class="form-control form-control-sm" id="category" name="category" />
                    </div>
                    <div class="col-6">
                      <label class="form-label small" for="level">Level</label>
                      <input class="form-control form-control-sm" id="level" name="level" />
                    </div>
                  </div>
                  <div class="mb-3">
                    <label class="form-label small" for="language">Language</label>
                    <input class="form-control form-control-sm" id="language" name="language" />
                  </div>
                  <div class="mb-3">
                    <label class="form-label small" for="description">Description</label>
                    <textarea class="form-control form-control-sm" id="description" name="description" rows="2"></textarea>
                  </div>
                  <button type="submit" class="btn btn-gradient w-100">Publish course</button>
                </form>
              </div>
            </div>
            <div class="card shadow-sm announcement-card mt-4" id="lecturerAnnouncements">
              <div class="card-body">
                <h5 class="card-title mb-3">Recent announcements</h5>
                <form class="row g-2 mb-3" method="GET" action="/dashboard/lecturer">
                  <div class="col-12">
                    <label class="form-label small mb-1">Filter by course</label>
                    <select class="form-select form-select-sm" name="announcement_course">
                      <option value="">All courses</option>
                      <% courses.forEach(function(course) { %>
                        <option value="<%= course.id %>" <%= Number(announcementFilters?.courseId || 0) === Number(course.id) ? "selected" : "" %>>
                          <%= course.course_name %>
                        </option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="col-12">
                    <label class="form-label small mb-1">Search text</label>
                    <input class="form-control form-control-sm" name="announcement_q" value="<%= announcementFilters?.q || '' %>" placeholder="Title or message" />
                  </div>
                  <div class="col-12 d-flex gap-2">
                    <button class="btn btn-sm btn-outline-primary" type="submit">Apply</button>
                    <a class="btn btn-sm btn-outline-secondary" href="/dashboard/lecturer">Reset</a>
                  </div>
                </form>
                <% if (!announcements.length) { %>
                  <p class="text-muted small mb-0">No announcements have been sent yet.</p>
                <% } else { %>
                  <ul class="list-group list-group-flush">
                    <% announcements.forEach(function(note) { %>
                      <li class="list-group-item px-0 py-2">
                        <div class="d-flex justify-content-between">
                          <strong><%= note.title %></strong>
                          <span class="text-muted small">
                            <%= new Date(note.created_at).toLocaleDateString() %>
                          </span>
                        </div>
                          <p class="text-muted small mb-0">
                            <%= note.course_name %>
                          </p>
                          <p class="text-muted small mb-0">Recipients: <%= Number(note.recipient_count || 0) %></p>
                          <% if (note.message) { %>
                            <p class="text-muted small mb-0 text-truncate"><%= note.message %></p>
                          <% } %>
                      </li>
                    <% }); %>
                  </ul>
                <% } %>
              </div>
            </div>
          </div>
        </section>

        <section class="row g-4 mt-3">
          <div class="col-12">
            <div class="card shadow-sm roster-card" id="lecturerRoster">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h5 class="card-title mb-0">Learner roster & messaging</h5>
                  <span class="text-muted small">Send course-specific announcements</span>
                </div>
                <div class="row g-2 mb-3">
                  <div class="col-12 col-md-6">
                    <input class="form-control form-control-sm" id="rosterSearch" placeholder="Search learner name or email" />
                  </div>
                  <div class="col-12 col-md-3">
                    <select class="form-select form-select-sm" id="rosterSort">
                      <option value="progress_desc">Sort: Progress (high-low)</option>
                      <option value="progress_asc">Sort: Progress (low-high)</option>
                      <option value="date_desc">Sort: Newest enrollments</option>
                      <option value="date_asc">Sort: Oldest enrollments</option>
                      <option value="name_asc">Sort: Name (A-Z)</option>
                    </select>
                  </div>
                </div>
                <% if (!rosterList.length) { %>
                  <p class="text-muted small mb-0">Add a course to begin inviting learners.</p>
                <% } else { %>
                  <% rosterList.forEach(function(courseRoster) { %>
                    <div class="roster-section mb-4">
                      <div class="d-flex justify-content-between align-items-center mb-2">
                        <strong><%= courseRoster.courseName %></strong>
                        <div class="d-flex align-items-center gap-2">
                          <span class="text-muted small"><%= courseRoster.students.length %> learner(s)</span>
                          <a class="btn btn-sm btn-outline-secondary" href="/dashboard/lecturer/courses/<%= courseRoster.courseId %>/roster/export">Export CSV</a>
                        </div>
                      </div>
                      <% if (!courseRoster.students.length) { %>
                        <p class="text-muted small mb-3">No learners enrolled yet.</p>
                      <% } else { %>
                        <ul class="list-group list-group-flush mb-3 roster-list" data-course-id="<%= courseRoster.courseId %>">
                          <% courseRoster.students.forEach(function(student) { %>
                            <li class="list-group-item px-0 py-2 d-flex justify-content-between align-items-center roster-student"
                              data-search="<%= String(student.student_name || '').toLowerCase() %> <%= String(student.email || '').toLowerCase() %>"
                              data-progress="<%= Number(student.progress || 0) %>"
                              data-enrolled-at="<%= student.enrolled_at ? new Date(student.enrolled_at).getTime() : 0 %>"
                              data-name="<%= String(student.student_name || '').toLowerCase() %>">
                              <div>
                                <strong><%= student.student_name %></strong>
                                <p class="text-muted small mb-0"><%= student.email %></p>
                                <p class="text-muted small mb-0">Enrolled: <%= student.enrolled_at ? new Date(student.enrolled_at).toLocaleDateString() : "-" %></p>
                              </div>
                              <div class="text-end">
                                <span class="text-muted small d-block">Progress</span>
                                <strong><%= Number(student.progress || 0) %>%</strong>
                              </div>
                            </li>
                          <% }); %>
                        </ul>
                      <% } %>
                      <form method="POST" action="/dashboard/lecturer/courses/<%= courseRoster.courseId %>/announce">
                        <div class="row g-2">
                          <div class="col-12">
                            <label class="form-label small">Announcement title</label>
                            <input class="form-control form-control-sm" name="title" required />
                          </div>
                          <div class="col-12">
                            <label class="form-label small">Message</label>
                            <textarea class="form-control form-control-sm" name="message" rows="2"></textarea>
                          </div>
                        </div>
                        <button type="submit" class="btn btn-outline-primary btn-sm mt-2">Message learners</button>
                      </form>
                    </div>
                  <% }); %>
                <% } %>
              </div>
            </div>
          </div>
        </section>
        <section class="row g-4 mt-1">
          <div class="col-lg-6">
            <div class="card shadow-sm trend-card">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h5 class="card-title mb-0">Course leaderboard</h5>
                  <span class="text-muted small">Top performers by revenue</span>
                </div>
                <% if (!topCourses || !topCourses.length) { %>
                  <p class="text-muted small mb-0">Leaderboard appears once your courses receive purchases.</p>
                <% } else { %>
                  <ul class="list-group list-group-flush">
                    <% topCourses.forEach(function(course, index) { %>
                      <li class="list-group-item px-0 py-2 d-flex justify-content-between align-items-center">
                        <span><%= index + 1 %>. <%= course.course_name %></span>
                        <strong>$<%= Number(course.revenue || 0).toFixed(2) %></strong>
                      </li>
                    <% }); %>
                  </ul>
                <% } %>
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="card shadow-sm trend-card">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h5 class="card-title mb-0">Rating distribution</h5>
                  <span class="text-muted small">Rounded ratings by course</span>
                </div>
                <% if (!ratingDistribution || !ratingDistribution.length) { %>
                  <p class="text-muted small mb-0">Ratings will appear after students submit reviews.</p>
                <% } else { %>
                  <ul class="list-group list-group-flush">
                    <% ratingDistribution.forEach(function(bucket) { %>
                      <li class="list-group-item px-0 py-2 d-flex justify-content-between align-items-center">
                        <span><%= bucket.rating %> star</span>
                        <strong><%= Number(bucket.count || 0) %> course(s)</strong>
                      </li>
                    <% }); %>
                  </ul>
                <% } %>
              </div>
            </div>
          </div>
        </section>
      </div>
