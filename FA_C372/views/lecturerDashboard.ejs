<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EduSphere | Lecturer Workspace</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@300..800&family=Space+Grotesk:wght@400..700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body class="instructor-dashboard">
    <%- include("partials/navbar") %>
    <main class="section instructor-section">
      <div class="container">
        <header class="instructor-hero mb-4">
          <div>
            <p class="eyebrow text-uppercase text-muted mb-1">Lecturer Workspace</p>
            <h1 class="display-5 fw-bold mb-2">Create, update, and monitor your courses</h1>
            <p class="text-muted">
              Track enrolments, open new learning paths, and review student progress without leaving
              the portal.
            </p>
          </div>
          <div class="instructor-stats">
            <div>
              <strong><%= courses.length %></strong>
              <p class="text-muted small mb-0">Active courses</p>
            </div>
            <div>
              <strong><%= studentCount %></strong>
              <p class="text-muted small mb-0">Learners engaged</p>
            </div>
          </div>
        </header>

        <% if (status?.course_created) { %>
          <div class="alert alert-success">Course created.</div>
        <% } %>
        <section class="row g-4">
          <div class="col-12 col-lg-6">
            <div class="card shadow-sm instructor-card">
              <div class="card-body">
                <h5 class="card-title mb-3">Your courses</h5>
                <% if (!courses.length) { %>
                  <p class="text-muted small">You have not published any courses yet.</p>
                <% } else { %>
                  <div class="list-group">
                    <% courses.forEach(function(course) { %>
                      <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                          <strong><%= course.course_name %></strong>
                          <p class="text-muted small mb-0"><%= course.category || "General" %></p>
                        </div>
                        <span class="text-muted small">$<%= Number(course.price).toFixed(2) %></span>
                      </div>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
          </div>

          <div class="col-12 col-lg-6">
            <div class="card shadow-sm instructor-card">
              <div class="card-body">
                <h5 class="card-title mb-3">Recent student progress</h5>
                <% if (!enrollments.length) { %>
                  <p class="text-muted small">No progress data yet.</p>
                <% } else { %>
                  <div class="progress-table">
                    <% enrollments.forEach(function(item) { %>
                      <div class="progress-row">
                        <div>
                          <strong><%= item.student_name %></strong>
                          <p class="text-muted small mb-0"><%= item.course_name %></p>
                        </div>
                        <div class="progress-track">
                          <div class="progress-bar" style="width:<%= Number(item.progress || 0) %>%"></div>
                        </div>
                        <span class="text-muted small"><%= Number(item.progress || 0) %>%</span>
                      </div>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </section>
      </div>
    </main>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
